FROM python:3.11-slim

WORKDIR /app

# Install only what we need
RUN pip install --no-cache-dir \
    fastapi==0.104.1 \
    uvicorn[standard]==0.24.0 \
    pydantic>=2.4.0 \
    python-multipart==0.0.6

# Copy application
COPY src/ ./src/

EXPOSE 8000

CMD ["python", "-m", "uvicorn", "src.api.main_simple:app", "--host", "0.0.0.0", "--port", "8000"]